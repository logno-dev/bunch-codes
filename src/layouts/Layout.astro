---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import "./global.css"
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>bunch.codes</title>
	</head>
	<body>
<Header />
		<slot />
<Footer />
		<script>
  document.addEventListener('mousemove', (e) => {
    document.documentElement.style.setProperty('--cursor-x', e.clientX*1.1 + 'px');
    document.documentElement.style.setProperty('--cursor-y', e.clientY*.9 + 'px');
  });
		</script>
	</body>
</html>

