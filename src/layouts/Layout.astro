---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
<Header />
		<slot />
		<div class="filler"></div>
<Footer />
		<script>
  document.addEventListener('mousemove', (e) => {
    document.documentElement.style.setProperty('--cursor-x', e.clientX*1.1 + 'px');
    document.documentElement.style.setProperty('--cursor-y', e.clientY*.9 + 'px');
  });
		</script>
	</body>
</html>

<style>
@import url('https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

:root {
  --cursor-x: 50vw;
  --cursor-y: 50vh;
  background-color: rgb(8,0,30);
	font-family: 'Kanit', sans-serif;
}

:root::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none; 
  background: radial-gradient(
    circle 90vmax at var(--cursor-x) var(--cursor-y),
    rgba(0, 0, 0, 0.3) 0%,
    rgba(0,0,0,0.7) 80%,
    rgba(0, 0, 0, .75) 100% 
  );
}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

.center {
  display: grid;
  place-items: center;
  place-content: center;
  height: 100dvh;
}

.filler {
	height: 100rem;
}

</style>
